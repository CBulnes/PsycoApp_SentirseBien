@model IEnumerable<PsycoApp.site.Models.Paciente>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nº</th>
            <th>Nombre</th>
            <th>Documento</th>
            <th>Estado</th>
            <th>Fecha de Nacimiento</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var paciente in Model)
            {
                <tr>
                    <td></td>
                    <td>@paciente.Nombre</td>
                    <td>@paciente.DocumentoTipo - @paciente.DocumentoNumero</td>
                  <td>
                    @if (@paciente.Estado == "1")
                    {
                        <span>Registrado</span>
                    }
                    else if (@paciente.Estado == "2")
                    {
                        <span>Atendido</span>
                    }
                    else
                    {
                        <span>Desconocido</span> <!-- Por si hay otros estados no contemplados -->
                    }
                </td>
                    <td>@paciente.FechaNacimiento</td>
                    <td>@paciente.Telefono</td>
                    <td>
                        <!-- Acciones como editar o eliminar -->
                        <button class="btn btn-sm sb-pa-container-table-button-edit" onclick="editarPaciente(@paciente.Id)">Editar</button>
                        <button class="btn btn-sm sb-pa-container-table-button-delet" onclick="eliminarPaciente(@paciente.Id)">Eliminar</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No se encontraron pacientes.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Controles de Paginación -->
@if (ViewBag.PageNumber != null && ViewBag.PageSize != null)
{
    <nav aria-label="Paginación">
        <ul class="pagination sb-pa-container-nav">
            <li class="page-item @(ViewBag.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0)" onclick="buscarPaciente(@(ViewBag.PageNumber - 1))"><span>&#60;</span></a>
            </li>

            <!-- Aquí podrías agregar más lógica para mostrar números de página si es necesario -->
            <li class="page-item">
                <span class="page-link">
                    @(ViewBag.PageNumber)
                </span>
            </li>

            <li class="page-item @(Model.Count() < ViewBag.PageSize ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0)" onclick="buscarPaciente(@(ViewBag.PageNumber + 1))"><span>&#62;</span></a>
            </li>
        </ul>
    </nav>
}
