@model IEnumerable<PsycoApp.entities.CajasUsuario>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle shadow-sm rounded-3 overflow-hidden">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Usuario</th>
                <th>Fecha</th>
                <th>Apertura</th>
                <th>Cierre</th>
                <th>Estado</th>
                <th>Ver</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id_caja</td>
                        <td>@item.nombre_usuario</td>
                        <td>@item.fecha.ToString("yyyy-MM-dd")</td>
                        <td>@(item.fecha_apertura?.ToString("HH:mm") ?? "-")</td>
                        <td>@(item.fecha_cierre?.ToString("HH:mm") ?? "-")</td>
                        <td>
                            <span class="badge
                                @(item.estado == "ABIERTO" ? "bg-success" :
                                  item.estado == "CERRADA" ? "bg-danger" :
                                  "bg-secondary")">
                                @item.estado
                            </span>
                        </td>
                        <td>
                            <button class="btn btn-primary btn-sm"
                                    onclick="seleccionarCaja(@item.id_caja, @item.id_usuario)">
                                Seleccionar
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center py-4 text-muted">
                        No se encontraron registros
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
